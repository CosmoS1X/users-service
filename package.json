{
  "name": "users-service",
  "version": "1.0.0",
  "description": "Test task for Effective Mobile",
  "type": "commonjs",
  "private": true,
  "homepage": "https://github.com/CosmoS1X/users-service#readme",
  "bugs": {
    "url": "https://github.com/CosmoS1X/users-service/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CosmoS1X/users-service.git"
  },
  "license": "MIT",
  "author": "Konstantin Korovin <cosmo.stan.x@gmail.com>",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "text-summary"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/dist/"],
    "moduleFileExtensions": ["ts", "js"]
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "start:prod": "node dist/bin/index.js",
    "start:dev": "nodemon --exec ts-node bin/index.ts",
    "check:type": "tsc --noEmit -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
