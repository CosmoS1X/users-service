{
  "name": "users-service",
  "version": "1.0.0",
  "description": "Test task for Effective Mobile",
  "type": "commonjs",
  "private": true,
  "homepage": "https://github.com/CosmoS1X/users-service#readme",
  "bugs": {
    "url": "https://github.com/CosmoS1X/users-service/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CosmoS1X/users-service.git"
  },
  "license": "MIT",
  "author": "Konstantin Korovin <cosmo.stan.x@gmail.com>",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "start:prod": "DEBUG=* node dist/bin/index.js",
    "start:dev": "DEBUG=server:* nodemon --exec ts-node bin/index.ts",
    "check:type": "tsc --noEmit -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "knex migrate:latest --verbose",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:status": "knex migrate:status",
    "migrate:make": "knex migrate:make"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "objection": "^3.1.5",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.8.0",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
